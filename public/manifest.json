{
    "manifest_version": 3,
    "version": "2.0.0",
    "name": "obsidianCaptureTool",
    "description": "Quick Capture for Obsidian",
    "options_page": "reviewNotes.html",
    
    "action": {
        "default_popup": "index.html",
        "default_title": "Obsidian Capture Tool"
    },
    "permissions": [
        "tabs",
        "storage"
    ],

    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],

    "commands": {
        "openExtensionPopup": {
          "suggested_key": {
            "default": "Alt+Q",
            "mac": "Command+Q"
          },
          "description": "Open the extension popup"
        }
      }
}